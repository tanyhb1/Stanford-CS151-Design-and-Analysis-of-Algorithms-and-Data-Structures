import csv


def main():
    results = []
    steps = 0
    with open('IntegerArray.txt', newline='') as inputfile:
        for row in csv.reader(inputfile):
            results.append(row)
    sort(results, steps)
    print(results)
    print(steps)
def sort(x, steps):
    if len(x) == 1:
        return(x)
    else:
        middle = len(x)/2
        left = sort(x[:int(middle)], steps)
        right = sort(x[int(middle):], steps)
        
        return(merge(left, right, steps))
        
def merge(left, right, steps):
    i, j = 0, 0
    c = []
    while(len(c) < len(left) + len(right)):
        if left[i] < right[j]:
            c.append(left[i])
            i = i + 1
            steps = steps + 1
        else:
            c.append(right[j])
            j = j + 1
            steps = steps + 1
        if i == len(left) or j == len(right):
            c.extend(left[i:] or right[j:])
            steps = steps + 1
            break
    return(c, steps)
if __name__ == '__main__':
    main()
    